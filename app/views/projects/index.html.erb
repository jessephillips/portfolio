<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<div class="row">
  <% @projects.each do |project| %>
    <div class="col-sm-4">
      <div class="proj-card">      
        <h3><%= project.title %></h3>
        <%= project.image %>
        <p><%= project.short_desc %></p>
        <%= link_to 'live project', project.project_link %><br />
        <%= link_to 'More info', project %>
      </div>
    </div>
  <% end %>
</div>